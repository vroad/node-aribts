{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2019",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "removeComments": true,
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "incremental": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "packages/napi-ts-crc32" }
  ]
}
